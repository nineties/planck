/// Test of loop
/// This program computes following sum. The result is 123.
///
/// int s = 3;
/// for (int i = 0; i < 16; i++)
///    s += i;
/// return s
export fun main(): i32 {
root:
    %0 = 3:i32    // accumulation
    %1 = 0:i32    // counter
    %2 = 16:i32   // loop count
    goto loop
loop:
    %3 = phi(root:%0, loop:%5)
    %4 = phi(root:%1, loop:%6)
    %5 = %3 + %4
    %6 = %4 + 1:i32
    if %6 < %2 loop exit
exit:
    return %5
}
